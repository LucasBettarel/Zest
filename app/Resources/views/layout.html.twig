<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title>{% block title %}Zest{% endblock %}</title>

  {% block stylesheets %}
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
    {% stylesheets '../app/Resources/public/css/*' %}
      <link rel="stylesheet" type="text/css" charset="UTF-8" media="all" href="{{ asset_url }}"/>
    {% endstylesheets %}
  {% endblock %}
</head>

<body>

  <ul id="gn-menu" class="gn-menu-main">
    <li class="gn-trigger">
      <a class="gn-icon gn-icon-menu"><span>Menu</span></a>
        {% block menu %}
        {% endblock %}
    </li>
    <li>
      <a href="{{ path('se_input_welcome') }}"><img alt="Schneider Electric" src="{{ asset('bundles/sezest/img/logo.png') }}"></a>
    </li>
    <li><a href="{{ path('se_input_home') }}"><i class="glyphicon glyphicon-pencil"></i> Manhours Input</a></li>
    <li><a href="{{ path('se_report_home') }}"><i class="glyphicon glyphicon-stats"></i> Reports</a></li>
    {#<li><a href="{{ path('se_zest_home') }}"><i class="glyphicon glyphicon-glass"></i></a></li>#}
  </ul>
 
  <div id="content">
    <div class="col-md-12">
      {% block body %}
      {% endblock %}
    </div>
  </div>

  {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    {% javascripts '../app/Resources/public/js/*' %}
      <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script>
      new gnMenu( document.getElementById( 'gn-menu' ) );
    </script>
  {% endblock %}

</body>
</html>